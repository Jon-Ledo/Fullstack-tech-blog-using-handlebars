{{#if loggedIn}}
<section class="posts-container">
  {{#each postsData}}

  <article class="post" data-post-id="{{id}}">
    
    <header class="header-container">
      <div class="post-title">
        <p>{{title}}</p>
        <button type="button" class="post-btn">
          <span class="plus-icon">
            <i class="far fa-plus-square"></i>
          </span>
          <span class="minus-icon">
            <i class="far fa-minus-square"></i>
          </span>
        </button>
      </div>
      <div class="sub-heading">
        <p>Posted by {{user.user_name}} on {{format_date createdAt}}</p>
      </div>
    </header>
    
    <div class="post-text">
      <p>{{text}}</p>
      <div class="comments-container">
        {{!-- New comments to be put here --}}
        
      </div>
      <div class="post-comment">
        <form class="comment-container" data-comments-box="{{id}}">
        
          <div class="form-floating">
            <textarea class="form-control" placeholder="Leave a comment here"
              style="height: 150px"></textarea>
            <label for="post-comment-box">Type here...</label>
          </div>
        
          <button type="submit" class="mt-3">Add Comment</button>
        
        </form>
      </div>
    </div>

  </article>
  {{/each}}
</section>

{{else}}

<section class="posts-container">
  {{#each postsData}}

  <article class="post" data-post-id="{{id}}">

    <header class="header-container">
      <div class="post-title">
        <p>{{title}}</p>
        <button type="button" class="post-btn">
          <span class="plus-icon">
            <i class="far fa-plus-square"></i>
          </span>
          <span class="minus-icon">
            <i class="far fa-minus-square"></i>
          </span>
        </button>
      </div>
      <div class="sub-heading">
        <p>Posted by {{user.user_name}} on {{format_date createdAt}}</p>
      </div>
    </header>

    <div class="post-text">
      <p>{{text}}</p>
      <div class="post-comment">
        <a href="/login">
          <button type="button">Leave a comment</button>
        </a>
        <p>You must be <a href="/login">logged in</a>, in order to leave a comment</p>

      </div>
    </div>

  </article>
  {{/each}}
</section>

{{/if}}