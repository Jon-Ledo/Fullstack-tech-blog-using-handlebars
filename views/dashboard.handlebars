{{#if loggedIn}}
<section class="dashboard-section">
  <div class="row">
    <div class="btn-container col-md-12 d-flex justify-content-center">
      <button type="button" class="btn btn-outline-dark btn-lg" id="newPostBtn" data-bs-toggle="modal" data-bs-target="#myModal">New Post +</button>
    </div>

  {{#with userData}}  
  <h2 id="user" data-user-id="{{id}}" class="mb-3">{{user_name}}'s Posts</h2>

  {{#each posts}}
  <div class="blog-post" data-post-id="{{id}}">
    <header class="blog-post-header mb-3">
    <h3 class="blog-post-title mb-3">{{title}}</h3>

    <button type="button" class="btn edit-btn me-2">
      <a href="/dashboard/edit-blog-post/{{id}}">Edit Post</a>
    </button>

    <button type="button" class="btn btn-outline-dark delete-btn">
      Delete Post
    </button>

    </header>
    <p>
    {{text}}
    </p>
  </div>


  {{/each}}

  {{> modalNewPost}}

  {{/with}}
  </div>
</section>
{{/if}}